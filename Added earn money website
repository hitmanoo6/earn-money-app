<div class="card">
<h2>Welcome To Earn Money App</h2>

<div class="balance">
Balance: ₹<span id="money">10</span>
</div>

<button onclick="earn()">Watch Ad & Earn ₹5</button>

<button onclick="withdraw()">Withdraw Money</button>

<p id="msg"></p>
</div>

<script>
let balance = 10;

function earn(){
balance = balance + 5;
document.getElementById("money").innerHTML = balance;
document.getElementById("msg").innerHTML = "Reward Added Successfully!";
}

function withdraw(){
if(balance >= 100){
alert("Withdrawal Request Submitted!");
balance = 0;
document.getElementById("money").innerHTML = balance;
}
else{
alert("Minimum withdrawal ₹100 required");
}
}
</script>

